.context
  .context-title
    = icon :check_square_o
    = " "
    = task

  .context-body
    = info task, :progress, progress_bar(percentage: task.progress, label: true)
    = info task, :owner
    = info task, :created_at
    = info task, :reminder
    = info task, :term
    = info task, :done

  .context-footer
    = actions_for task
